<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App2.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="App2"
    Title="Serial Port WinUI Örneği"
    >
    <Grid>
        <StackPanel Margin="10">
            <!-- COM port seçimi -->
            <Button Content="COM Port Seçin:"></Button>
            <ComboBox Name="comboBoxPorts" Width="200"/>

            <!-- Baud rate seçimi -->
            <Button Content="Baud Rate Seçin:" Margin="0,10,0,0"> </Button>
            <ComboBox Name="comboBoxBaudRates" Width="200"/>

            <!-- Port açma butonu -->
            <Button Name="buttonOpenPort" Content="Portu Aç" Width="100" Margin="0,20,0,0" Click="buttonOpenPort_Click"/>

            <!-- Durum bilgisi -->
            <TextBlock Name="textBlockStatus" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>